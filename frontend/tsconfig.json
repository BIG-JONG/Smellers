{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts", 
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
